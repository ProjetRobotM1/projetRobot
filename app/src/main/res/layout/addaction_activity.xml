<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/addVocalInterBtn"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="@string/buttonAjouterVocalInter" />

    <Button
        android:id="@+id/addWritenInterBtn"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addVocalInterBtn"
        android:layout_marginTop="35dp"
        android:text="@string/buttonAjouterWritenInter" />

    <Button
        android:id="@+id/addMouvInterBtn"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addWritenInterBtn"
        android:layout_marginTop="35dp"
        android:text="@string/buttonAjouterMouvInter" />
    <Button
        android:id="@+id/addProjInterBtn"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addMouvInterBtn"
        android:layout_marginTop="35dp"
        android:text="@string/buttonAjouterProjInter" />
</RelativeLayout>