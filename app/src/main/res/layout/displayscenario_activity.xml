<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbarSize="4dp"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:fadeScrollbars="false"
    android:scrollbarStyle="insideOverlay"
    android:scrollbarThumbVertical="@drawable/scrollbar" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nomScenario"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            />

        <ListView
            android:id="@+id/listViewFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line1"

            android:longClickable="true"
            android:scrollbars="vertical"></ListView>

        <ListView
            android:id="@+id/listViewGroupePersonne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line2"

            android:longClickable="true"
            android:scrollbars="vertical"></ListView>

        <ListView
            android:id="@+id/listViewGroupeArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line3"

            android:longClickable="true"
            android:scrollbars="vertical"></ListView>

        <TextView
            android:id="@+id/textFAQ"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomScenario"
            android:text="FAQ" />

        <TextView
            android:id="@+id/textGroupe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listViewFAQ"
            android:text="GROUPE" />

        <TextView
            android:id="@+id/textArticle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listViewGroupePersonne"
            android:text="ARTICLE" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textArticle"
            android:background="@android:color/darker_gray" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textGroupe"
            android:background="@android:color/darker_gray" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textFAQ"
            android:background="@android:color/darker_gray" />

    </RelativeLayout>
</ScrollView>